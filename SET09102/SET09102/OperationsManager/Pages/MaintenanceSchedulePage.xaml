<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ops="clr-namespace:SET09102.OperationsManager.Pages"
             x:Class="SET09102.OperationsManager.Pages.MaintenanceSchedulePage"
             Title="Maintenance Schedule">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="10">
            <Label Text="Maintenance Schedule" 
                   FontSize="24" 
                   HorizontalOptions="Center"/>
            
            <HorizontalStackLayout Spacing="10">
                <Button Text="Add Schedule" 
                        Clicked="OnAddScheduleClicked"
                        HorizontalOptions="Start"/>
                <Button Text="View Calendar" 
                        Clicked="OnViewCalendarClicked"
                        HorizontalOptions="End"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" 
                      x:Name="MaintenanceCollection"
                      ItemsSource="{Binding MaintenanceSchedules}"
                      SelectionMode="Single"
                      SelectionChanged="OnScheduleSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding SensorName}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding MaintenanceType}"/>
                            <Label Text="{Binding ScheduledDate, StringFormat='Scheduled: {0:g}'}"/>
                            <Label Text="{Binding Status}"/>
                            <Label Text="{Binding AssignedTechnician, StringFormat='Technician: {0}'}"/>
                            <Label Text="{Binding Priority, StringFormat='Priority: {0}'}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ops:OpsManagerNavigationBar Grid.Row="2" />
    </Grid>
</ContentPage> 