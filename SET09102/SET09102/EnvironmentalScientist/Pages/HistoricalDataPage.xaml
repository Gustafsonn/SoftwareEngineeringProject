<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SET09102.EnvironmentalScientist.Pages.HistoricalDataPage"
             Title="Historical Data">
    <StackLayout>
        <Label Text="Historical Environmental Data" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />
        <Picker Title="Select Data Type"
                ItemsSource="{Binding DataTypes}"
                SelectedItem="{Binding SelectedDataType, Mode=TwoWay}"
                SelectedIndexChanged="OnDataTypeChanged" />
        <CollectionView ItemsSource="{Binding HistoricalData}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding DataType}" />
                        <Label Text="{Binding Value}" />
                        <Label Text="{Binding Timestamp}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>