<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SET09102.Administrator.Pages.AdminNavigationBar">

    <!-- add another * here to add pages to the nav grid -->
    <Grid ColumnDefinitions="*,*,*,*" 
          BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
          Padding="10">
            
        <Button Grid.Column="0"
                Text="🏠 Dashboard"
                Clicked="OnDashboardClicked"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

        <Button Grid.Column="1"
                Text="Sensor Config"
                Clicked="OnSensorConfigClicked"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
        
        <Button Grid.Column="2"
                Text="📊 Data Storage"
                Clicked="OnDataClicked"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

        <Button Grid.Column="3"
                Text="⚙️ Settings"
                Clicked="OnSettingsClicked"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
    </Grid>

</ContentView> 