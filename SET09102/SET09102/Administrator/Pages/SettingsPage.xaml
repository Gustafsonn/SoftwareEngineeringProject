<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:admin="clr-namespace:SET09102.Administrator.Pages"
             x:Class="SET09102.Administrator.Pages.SettingsPage"
             Title="Settings">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Label Text="Settings" 
               FontSize="24" 
               HorizontalOptions="Center" 
               Margin="0,20,0,20"/>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">
                <Label Text="Administrator Settings"
                       FontSize="18"
                       HorizontalOptions="Center"/>
                
                <Label Text="Settings options will be added here"
                       FontSize="16"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Navigation Bar -->
        <admin:AdminNavigationBar Grid.Row="2" />
    </Grid>
</ContentPage> 