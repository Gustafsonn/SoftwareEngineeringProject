             x:Class="SET09102.Administrator.Pages.SettingsPage"
             Title="Settings">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Label Text="Settings" 
               FontSize="24" 
               HorizontalOptions="Center" 
               Margin="0,20,0,20"/>

        <!-- Main Content -->
