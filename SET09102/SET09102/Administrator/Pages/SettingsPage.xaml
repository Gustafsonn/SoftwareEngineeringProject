            <VerticalStackLayout Spacing="20" Padding="20">
                <Label Text="Administrator Settings"
                       FontSize="18"
                       HorizontalOptions="Center"/>
                
                <Label Text="Settings options will be added here"
                       FontSize="16"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Navigation Bar -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,*,*" 
              BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
              Padding="10">
            
